@inject NavigationManager NavManager

@if (@Hotel.Reviews is not null && @Hotel.Reviews.Any())
{
  <div class="card shadow">
    <div class="card-body">
      <div class="d-flex justify-content-between">
        <p class="h3">@Caption</p>
        <AuthorizeView Context="authContext">
          <button class="btn btn-outline-secondary float-right " title="Добавить отзыв">
            <i class="bi bi-chat-dots-fill"></i>
          </button>
        </AuthorizeView>
      </div>
      <div class="row mt-1">
        @foreach (var item in @Hotel.Reviews)
        {
          <div class="card shadow">
            <div class="card-body">
              <div class="row">
                <div class="d-flex justify-content-between">
                  <h5 class="card-subtitle mb-3 "> @item.Name</h5>
                  <StarComponent StarCount="@item.Star" />
                </div>
              </div>
              <div class="row">
                <h5 class="card-subtitle mb-3 "> @item.DateTimeReview</h5>
              </div>
              <div class="row">
                <h5 class="card-subtitle mb-3 "> @item.Description</h5>
              </div>
            </div>
          </div>
        }
      </div>
    </div>
  </div>
}

@code {
  [Parameter, EditorRequired]
  public HotelDto Hotel { get; set; }

  [Parameter, EditorRequired]
  public string Caption { get; set; }
}
