<div class="alert alert-success fade-out" role="alert" id="success_message">
  <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-check-circle-fill" viewBox="0 0 16 16">
    <path fill-rule="evenodd" d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16
                                 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0
                                 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0
                                 0-.01-1.05z" />
  </svg>
  @Message
</div>

<style>
  .fade-out {
    opacity: 1;
    transition: opacity 2s ease-out;
  }

  .hidden {
    opacity: 0;
  }
</style>

@* Сообщение исчезнет через 5 секунд. *@
<script>
  setTimeout(function () {
      var messageElement = document.getElementById('success_message');
        if (messageElement) {
            messageElement.classList.add('hidden');
        }
  }, 5000);
</script>

@code {
  /// <summary> Параметр,позволяющий компоненту-потребителю предоставить нужное сообщение по своему выбору </summary>
  [Parameter, EditorRequired]
  public string Message { get; set; } = default!;
}
