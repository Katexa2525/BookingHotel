<div class="card card-brand mb-4 shadow">
  <div class="card-body">
    <div class="row">
      <div class="col-4">
        <h4>@Title</h4>
        <p class="text-secondary">@HelpText</p>
        <img src="@(!string.IsNullOrWhiteSpace(@HotelMainPhoto) ? $"images/{@HotelMainPhoto}"
                                                                : "images/NoImage.png")"
             class="card-img-top" alt="@HotelMainPhoto">
      </div>
      <div class="col-8">
        <!--Показывает содержимое, которое будет отображаться -->
        @ChildContent
      </div>
    </div>
  </div>
</div>

@code {
  /// <summary>Название раздела </summary>
  [Parameter, EditorRequired]
  public string Title { get; set; } = default!; 

  /// <summary> Текст раздела справки </summary>
  [Parameter, EditorRequired]
  public string HelpText { get; set; } = default!;

  /// <summary> Раздел фото </summary>
  [Parameter, EditorRequired]
  public string HotelMainPhoto { get; set; } = default!;

  /// <summary> Содержимое, которое будет отображаться </summary>
  [Parameter, EditorRequired]
  public RenderFragment ChildContent { get; set; } = default!;

}
